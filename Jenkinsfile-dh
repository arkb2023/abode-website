pipeline {
    agent any
    
    parameters {
        string(name: 'image_tag', defaultValue: 'latest', description: 'DockerHub image tag')
        string(name: 'PROD_HOST', defaultValue: '10.158.148.115', description: 'Prod VM IP')
        string(name: 'PROD_USER', defaultValue: 'ubuntu', description: 'Prod SSH user')
    }
    
    stages {
        stage('Load Config') {
            steps {
                script {
                    try {
                        // Read config.properties
                        def configFile = readFile(file: 'config.properties')
                        def props = [:]
                        
                        configFile.split('\n').each { line ->
                            if (line && !line.startsWith('#') && line.contains('=')) {
                                def (key, value) = line.split('=', 2)
                                props[key.trim()] = value.trim()
                            }
                        }
                        
                        // SOURCE = dockerhub (this job is triggered by DockerHub!)
                        env.SOURCE = 'dockerhub'
                        env.DOCKER_HUB_USER = props.DOCKER_HUB_USER ?: 'arkb2023'
                        env.IMAGE_NAME = props.IMAGE_NAME ?: 'abode-website'
                        env.PROD_HOST = params.PROD_HOST ?: props.PROD_HOST ?: '10.158.148.115'
                        env.PROD_USER = params.PROD_USER ?: props.PROD_USER ?: 'ubuntu'
                        env.TEST_HOST = props.TEST_HOST ?: '10.158.148.84'
                        env.TEST_USER = props.TEST_USER ?: 'ubuntu'
                        env.TEST_PORT = props.TEST_PORT ?: '8081'
                        
                        // CRITICAL: Use image_tag from DockerHub webhook!
                        env.IMAGE_TAG = params.image_tag ?: 'latest'
                        env.IMAGE = "${env.DOCKER_HUB_USER}/${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                        
                        // Determine if main branch by tag convention
                        // DockerHub tags: main-v1.0-123 OR v1.0-123
                        env.IS_MAIN = (env.IMAGE_TAG.startsWith('main-')) ? 'true' : 'false'
                        env.SOURCE_BRANCH = (env.IS_MAIN == 'true') ? 'main' : 'develop'
                        
                        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                        echo "DockerHub Configuration Loaded"
                        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                        echo "Source: ${env.SOURCE}"
                        echo "Image: ${env.IMAGE}"
                        echo "Image Tag: ${env.IMAGE_TAG}"
                        echo "Branch (from tag): ${env.SOURCE_BRANCH}"
                        echo "Deploy to Prod: ${env.IS_MAIN == 'true' ? 'YES' : 'NO'}"
                        echo "Prod Target: ${env.PROD_USER}@${env.PROD_HOST}"
                        echo "Test Target: ${env.TEST_USER}@${env.TEST_HOST}:${env.TEST_PORT}"
                        echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                        
                    } catch (Exception e) {
                        echo "Error loading config: ${e.message}"
                        env.SOURCE = 'dockerhub'
                        env.DOCKER_HUB_USER = 'arkb2023'
                        env.IMAGE_NAME = 'abode-website'
                        env.IMAGE_TAG = params.image_tag ?: 'latest'
                        env.IMAGE = "${env.DOCKER_HUB_USER}/${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                        env.PROD_HOST = params.PROD_HOST ?: '10.158.148.115'
                        env.PROD_USER = params.PROD_USER ?: 'ubuntu'
                        env.TEST_HOST = '10.158.148.84'
                        env.TEST_USER = 'ubuntu'
                        env.TEST_PORT = '8081'
                        env.IS_MAIN = (env.IMAGE_TAG.startsWith('main-')) ? 'true' : 'false'
                    }
                }
            }
        }
        
        stage('DockerHub Webhook Info') {
            steps {
                echo """
                ğŸš€ DockerHub Webhook Triggered!
                ğŸ“¦ Image: ${env.IMAGE}
                ğŸ·ï¸  Tag: ${env.IMAGE_TAG}
                ğŸŒ¿ Branch: ${env.SOURCE_BRANCH}
                âœ… Received pre-built image (skip build)
                """
            }
        }
        
        stage('Test') {
            steps {
                echo "ğŸ§ª Testing image: ${env.IMAGE}"
                sshagent(credentials: ['prod-ssh-key']) {
                    sh '''
                        chmod +x ./scripts/test.sh
                        ./scripts/test.sh "${TEST_USER}" "${TEST_HOST}" "${IMAGE}"
                    '''
                }
            }
        }
        
        stage('Deploy Prod') {
            when {
                expression { env.IS_MAIN == 'true' }
            }
            steps {
                echo "ğŸš€ Deploying to Production: ${env.IMAGE}"
                sshagent(credentials: ['prod-ssh-key']) {
                    sh '''
                        chmod +x ./scripts/deploy.sh
                        ./scripts/deploy.sh "${PROD_USER}" "${PROD_HOST}" "${IMAGE}"
                    '''
                }
            }
        }
        
        stage('Summary') {
            steps {
                script {
                    echo ""
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                    echo "DockerHub Pipeline Complete"
                    if (env.IS_MAIN == 'true') {
                        echo "   Stages: Test â†’ Deploy"
                        echo "   Image: ${env.IMAGE}"
                        echo "   Live: http://${env.PROD_HOST}"
                    } else {
                        echo "   Stages: Test (Deploy skipped)"
                        echo "   Image: ${env.IMAGE}"
                    }
                    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                }
            }
        }
    }
    
    post {
        always { 
            cleanWs() 
        }
        failure { 
            echo "âŒ Pipeline FAILED: ${env.IMAGE}"
        }
        success { 
            echo "âœ… Pipeline SUCCESS: ${env.IMAGE}"
        }
    }
}
